<Window
    x:Class="ViewLayer.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UC="clr-namespace:ViewLayer.Views.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KaitosLite"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1024"
    Height="768"
    MinWidth="1024"
    MinHeight="768"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />


        </Grid.ColumnDefinitions>
        <TabControl
            Grid.RowSpan="7"
            Grid.Column="0"
            Margin="5,10,15,10"
            TabStripPlacement="Left"
            SelectedIndex="{Binding TabSelectedIndex}">

            <TabItem
                Width="100"
                Height="50"
                Header="Projekty">
                <TabItem.Content>
                    <UC:DockerUC DataContext="{Binding DockerViewModel}"/>
                </TabItem.Content>
            </TabItem>

            <TabItem
                Width="100"
                Height="50"
                Header="Skeny">
                <TabItem.Content>
                    <UC:DockerUC DataContext="{Binding DockerViewModel}"/>
                </TabItem.Content>
            </TabItem>

            <TabItem
                Width="100"
                Height="50"
                Header="Strany">
                <TabItem.Content>
                    <UC:DockerUC DataContext="{Binding DockerViewModel}"/>
                </TabItem.Content>
            </TabItem>

            <TabItem
                Width="100"
                Height="50"
                Header="Struktura">
                <TabItem.Content>
                    <UC:DockerUC DataContext="{Binding DockerViewModel}"/>
                </TabItem.Content>
            </TabItem>

            <TabItem
                Width="100"
                Height="50"
                Header="OCR">
                <TabItem.Content>
                    <UC:DockerUC DataContext="{Binding DockerViewModel}"/>
                </TabItem.Content>
            </TabItem>

            <TabItem
                Width="100"
                Height="50"
                Header="Export">
                <TabItem.Content>
                    <UC:DockerUC DataContext="{Binding DockerViewModel}"/>
                </TabItem.Content>
            </TabItem>

            <TabItem
                Width="100"
                Height="50"
                Header="Protokol">
                <TabItem.Content>
                    <UC:DockerUC DataContext="{Binding DockerViewModel}"/>
                </TabItem.Content>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
