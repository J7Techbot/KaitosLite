<Window x:Class="ViewLayer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViewLayer"
        xmlns:UC="clr-namespace:ViewLayer.Views.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="217*"/>
            <RowDefinition Height="127*"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>
        <Button Content="Generate" HorizontalAlignment="Left" Margin="174,31,0,0" VerticalAlignment="Top"
                Command="{Binding GenerateCommand}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"/>

        <UC:ProjectUC Grid.Row="0" Grid.Column="0"></UC:ProjectUC>
        <UC:ModsUC Grid.Column="0" Margin="0,217,0,0" Grid.RowSpan="3"/>
        <UC:PagesUC Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"></UC:PagesUC>

        <TextBlock Margin="0" Grid.Row="1" Grid.Column="1" Text="ProjectsCount" Width="100" Height="20"  HorizontalAlignment="Left"></TextBlock>
        <TextBlock Margin="0,0,20,0" Grid.Row="1" Grid.Column="1" Text="{Binding ProjectsCount}" MaxHeight="20" HorizontalAlignment="Right"></TextBlock>

        <TextBlock Margin="0" Grid.Row="1" Grid.Column="2" Text="SelectPagesCount" Width="100" Height="20"  HorizontalAlignment="Left" ></TextBlock>
        <TextBlock Margin="0,0,20,0" Grid.Row="1" Grid.Column="2" Text="{Binding SelectedPagesCount}" MaxHeight="20" HorizontalAlignment="Right"></TextBlock>
    </Grid>
</Window>
