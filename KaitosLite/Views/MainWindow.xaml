<Window
    x:Class="ViewLayer.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UC="clr-namespace:ViewLayer.Views.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ViewLayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="9*" />
            <ColumnDefinition Width="11*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="217*" />
            <RowDefinition Height="127*" />
            <RowDefinition Height="90*" />
        </Grid.RowDefinitions>
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="174,31,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding GenerateCommand}"
            Content="Generate" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Click="Button_Click"
            Content="OpenDockerWindow" />

        <UC:ProjectUC Grid.Row="0" Grid.Column="0" />
        <UC:ModsUC
            Grid.RowSpan="3"
            Grid.Column="0"
            Margin="0,217,0,0" />
        <UC:PagesUC
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="2" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Width="100"
            Height="20"
            Margin="0"
            HorizontalAlignment="Left"
            Text="ProjectsCount" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            MaxHeight="20"
            Margin="0,0,20,0"
            HorizontalAlignment="Right"
            Text="{Binding ProjectsCount}" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="2"
            Width="100"
            Height="20"
            Margin="0"
            HorizontalAlignment="Left"
            Text="SelectPagesCount" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="2"
            MaxHeight="20"
            Margin="0,0,20,0"
            HorizontalAlignment="Right"
            Text="{Binding SelectedPagesCount}" />
    </Grid>
</Window>
