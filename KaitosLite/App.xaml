<Application
    x:Class="KaitosLite.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UC="clr-namespace:ViewLayer.Views.UserControls"
    xmlns:local="clr-namespace:KaitosLite"
    Startup="OnStartup">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="ThemeDictionary">
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="Resource/Styles/CustomStyle.xaml"/>
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>


            <UC:ProjectUC x:Key="projectComp" />
            <UC:ModsUC x:Key="modsComp" />
            <UC:PagesUC x:Key="pagesComp" />
            <UC:StructureUC x:Key="structureComp"/>
            <UC:ImagesUC x:Key="imagesComp"/>
            <UC:BaseUserControl x:Key="ClearControl" />
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
